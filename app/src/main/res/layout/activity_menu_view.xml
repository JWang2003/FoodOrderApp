<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".MenuView">

    <!--Top Section-->
    <LinearLayout
        android:id="@+id/TopSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Restaurant Image Section[start]-->
        <RelativeLayout
            android:id="@+id/RestaurantImageSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <!--Restaurant background image-->
            <ImageView
                android:id="@+id/restaurant_background"
                android:layout_width="match_parent"
                android:layout_height="255dp"
                android:scaleType="centerCrop"
                android:src="@drawable/burgerking" />

            <!--back button-->
            <ImageButton
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp" />

        </RelativeLayout>

        <!--Restaurant Information Section Top-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="3dp"
            android:paddingRight="20dp"
            android:paddingBottom="1dp">

            <!--Restaurant Name Text-->
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Burger King"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="27sp"></TextView>

            <TextView
                android:id="@+id/address"
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2371 Robson Ave"
                android:textAlignment="viewEnd"
                android:textSize="18sp"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <!-- Restaurant Information Section Bottom -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="18dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/priceSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:fontFamily="monospace"
                android:text="$$"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/ratingStars"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp" />

            <TextView
                android:id="@+id/stars"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:fontFamily="monospace"
                android:text="(1,892)"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/delivery"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="37dp"
                android:fontFamily="monospace"
                android:text="$23.99 Delivery Fee"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/yelp_link"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"></ImageButton>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="3dp"
            android:paddingRight="20dp"
            android:paddingBottom="1dp">

            <TextView
                android:id="@+id/most_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Most Popular"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="32sp" />
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/menu_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TopSection" />


