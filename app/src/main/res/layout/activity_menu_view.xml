<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/restaurant_focusview"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MenuView">

<!--Top Section-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/TopSection">

    <!-- Restaurant Image Section[start]-->
    <RelativeLayout
        android:id="@+id/RestaurantImageSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!--Restaurant background image-->
        <ImageView
            android:id="@+id/restaurant_background"
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:background="@drawable/burgerking"/>

        <!--back button-->
        <ImageButton
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp" />

    </RelativeLayout>

    <!--Restaurant Information Section Top-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="3dp"
        android:paddingRight="20dp"
        android:paddingBottom="1dp">

        <!--Restaurant Name Text-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Burger King"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="27sp"></TextView>

        <TextView
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2371 Robson Ave"
            android:textSize="18sp"
            android:textAlignment="viewEnd"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <!-- Restaurant Information Section Bottom -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingLeft="18dp"
        >

        <TextView
            android:id="@+id/priceSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$$"
            android:layout_marginLeft="3dp"
            android:fontFamily="monospace"
            android:textSize="16sp"
            />
        <ImageView
            android:id="@+id/ratingStars"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="(1,892)"
            android:fontFamily="monospace"
            android:layout_marginLeft="3dp"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="37dp"
            android:text="$23.99 Delivery Fee"
            android:textSize="13sp"
            android:fontFamily="monospace"
            />
    </LinearLayout>

    <ImageButton
        android:layout_marginTop="2dp"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        >
    </ImageButton>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="3dp"
        android:paddingRight="20dp"
        android:paddingBottom="1dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:fontFamily="sans-serif-medium"
            android:text="Most Popular"
            />
    </LinearLayout>
</LinearLayout>

<androidx.cardview.widget.CardView
    android:layout_marginTop="12dp"
    android:layout_marginLeft="23dp"
    android:layout_marginBottom="30dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_width="360dp"
    android:layout_gravity="center_horizontal"
    android:layout_height="250dp"
    app:cardBackgroundColor="@color/teal_200"
    app:cardCornerRadius="15dp"
    app:layout_constraintBottom_toBottomOf="parent"
    >
</androidx.cardview.widget.CardView>




<com.google.android.material.floatingactionbutton.FloatingActionButton
    android:layout_width="94dp"
    android:layout_height="79dp"
    android:layout_marginRight="24dp"
    android:layout_marginBottom="16dp"
    android:background="@color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    >
</com.google.android.material.floatingactionbutton.FloatingActionButton>


<!-- Restaurant Image Section [end]-->




